@using IdleBattler_Common.Models.Equipment

<h3>Items To Sell</h3>

<div style="border:1px solid black;">
    @if (EquipmentAvailableToSell.Count > 0)
    {
        <ul class="list-group list-group">
            @foreach (var equip in EquipmentAvailableToSell)
            {
                <li class="list-group-item">
                    <div class="card">
                        <div class="card-body">
                            <div class="row d-flex">
                                <div class="col">@equip.Name</div>
                                <div class="col">
                                    <div class="float-end">
                                        <div class="col">
                                            <input type="number" @bind="_sellPrice" />
                                        </div>
                                        <div class="col">
                                            <button class="btn btn-primary" @onclick="(() => OnEquipmentSell(equip, _sellPrice))">Sell</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>

            }
        </ul>
    }
</div>

@code {

    [Parameter]
    public List<EquipmentModel> EquipmentAvailableToSell { get; set; }

    [Parameter]
    public Action<EquipmentModel, int> OnEquipmentSell { get; set; }

    private int _sellPrice;
}
